<div class="container">
 <div class="row">
  <div class="col-4">
    <h3>ショッピングカート</h3>
  </div>

  <div class="col-5">
  </div>

   <div class="col-3">
    <%= link_to "カートを空にする", destroy_all_path, method: :delete, class: "pull-right btn btn-danger" %>
  </div>
 </div>


<div class="row">
 <table class="table">
  <thead>
      <th>商品名</th>
      <th>単価(税込)</th>
      <th>数量</th>
      <th>小計</th>
      <th></th>
  </thead>
  <tbody>
  <% @cart_items.each do |cart_item| %>
      <tr>
        　<td><%= cart_item.item.name %></td>
          <td><%= cart_item.item.with_tax_price%></td>

          <td>
            <%= form_with(url: cart_item_url(cart_item), method: :patch,local: true) do |f| %>
            <%= f.select :amount, *[1..10] %>
            <%= f.submit "変更" , class: "btn btn-success" %>
           <% end %>
          </td>

          <td><%= cart_item.subtotal%></td>
          <td class="col-xs-1">
           <%= link_to "削除する", cart_item_path(cart_item.id), method: :DELETE, class: "btn btn-danger" %>
          </td>
          <% @合計金額 =  cart_item.subtotal %>
      </tr>
  <% end %>
  </tbody>
 </table>
 </div>

  <div class="row">
   <div class="col-4">
    <%= link_to "買い物を続ける", root_path, class: "btn btn-primary", data: {"turbolinks" => false} %>
   </div>

   <div class="col-4">
    </div>

   <div class="col-4">
     <table class="table table-bordered">
        <tr>
            <td><strong>合計金額</strong></td>
            <td>¥<%= @total.round.to_s(:delimited)%></td>
        </tr>
    </table>
   </div>
  </div>

   <div class= "col-xs-4 col-xs-offset-4">
        <%= link_to "情報入力に進む", new_order_path, class: "col-xs-12 btn btn-success"%>
   </div>
  </div>